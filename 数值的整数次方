class Solution {
public:
    double Power(double base, int exponent) {
        double ret=1;
        if(exponent>0)
        {
            for(int i=0;i<exponent;i++)
        {
            ret*=base;
        }
        }
        else
        {
            for(int i=0;i<(-1*exponent);i++)
        {
            ret*=(1/base);
        }
        }
        return ret;
    }
};
