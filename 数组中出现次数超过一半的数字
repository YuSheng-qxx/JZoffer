class Solution {
public:
    int MoreThanHalfNum_Solution(vector<int> numbers) {
        if(numbers.empty())
            return 0;
        else
        {
            int count=0;
            sort(numbers.begin(),numbers.end());
            int mid=numbers[numbers.size()/2];
            for(int i=0;i<numbers.size();i++)
            {
                if(numbers[i]==mid)
                    count++;
            }
            return (count>numbers.size()/2)?mid:0;
        }
    }
};
